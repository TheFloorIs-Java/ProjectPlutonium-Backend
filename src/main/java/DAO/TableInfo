TABLE#1 : user_info
    Columns:
        user_id           | int     | primary key ---> increments automatically
        username          | varchar | not null
        password          | varchar | not null
        salt              | varchar | not null
        permission_level  | int     | not null ---> 0 for user & 1 for admin

TABLE#2 : sessions
    Columns:
        user_id           | int      | foreign key ---> user_info.user_id
        session_id        | varchar  | not null unique
        session_expiry    | varchar  | not null

TABLE#3 : game_type
    Columns:
        game_id           | int      | primary key ---> increments automatically
        game_name         | varchar  | not null unique ----> 255 character

TABLE#4 : game_daily_chall
    Columns:
        game_date         | date     | not null
        game_id           | int      | foreign key ---> game_type.game_id
        game_name         | varchar  | not null ----> 1000 character